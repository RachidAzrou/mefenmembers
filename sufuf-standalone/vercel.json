{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/ws",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "client/dist/assets/$1"
    },
    {
      "src": "^/pattern.jpg",
      "dest": "client/dist/pattern.jpg"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ]
}
